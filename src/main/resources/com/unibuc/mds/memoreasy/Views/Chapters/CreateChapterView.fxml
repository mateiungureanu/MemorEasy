<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unibuc.mds.memoreasy.Controllers.CreateChapterController">
    <children>
        <TextField fx:id="textField" layoutX="177.0" layoutY="200.0" promptText="Enter the chapter name"/>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutY="101.0" prefHeight="18.0" prefWidth="600.0"
               text="Create chapter" textAlignment="CENTER" AnchorPane.rightAnchor="0.0">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button fx:id="buttonCreate" layoutX="338.0" layoutY="200.0" mnemonicParsing="false" onAction="#create"
                style="-fx-border-radius: 4;" styleClass="btn-success" text="Create"/>
    </children>
</AnchorPane>
