<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unibuc.mds.memoreasy.Controllers.EditFlashcardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px;" text="Edit Flashcard" />

    <TextField fx:id="questionField" promptText="Question" />
    <TextField fx:id="answerField" promptText="Answer" />

    <Button fx:id="saveButton" onAction="#handleEditFlashcard" text="Save Changes" />
    <Label fx:id="errorLabel" textFill="red" />
</VBox>
