<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unibuc.mds.memoreasy.Controllers.EditFlashcardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px;" text="Edit Flashcard" />

    <TextArea fx:id="questionTextArea" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="100.0" prefHeight="200.0" prefWidth="300" promptText="Enter the question here..." wrapText="true" />
    <ImageView fx:id="image_q_view" fitHeight="77.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true" />
    <Button fx:id="load_img_q_button" mnemonicParsing="false" onAction="#handleLoadQuestionImage" text="Load Image" />
    <TextArea fx:id="answerTextArea" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="100.0" prefHeight="200.0" prefWidth="300" promptText="Enter the question here..." wrapText="true" />
    <ImageView fx:id="image_a_view" fitHeight="77.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true" />
    <Button fx:id="load_img_a_button" mnemonicParsing="false" onAction="#handleLoadAnswerImage" text="Load Image" />

    <Button fx:id="saveButton" onAction="#handleEditFlashcard" text="Save Changes" />
    <Label fx:id="errorLabel" textFill="red" />
</VBox>