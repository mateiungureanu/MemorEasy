<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unibuc.mds.memoreasy.Controllers.DeleteFlashcardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Are you sure you want to delete this flashcard?" wrapText="true"/>
    <HBox spacing="10">
        <Button text="Delete" onAction="#handleDeleteFlashcard"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
