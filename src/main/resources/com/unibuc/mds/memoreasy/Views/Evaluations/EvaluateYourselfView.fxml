<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane fx:id="stackPane" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unibuc.mds.memoreasy.Controllers.EvaluateYourselfController">

    <!-- Test Controls -->
    <VBox fx:id="testControls" alignment="CENTER" prefHeight="100.0" prefWidth="300.0" spacing="10">
        <Label fx:id="progress" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Progress: 0/0"/>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="knowButton" onAction="#handleKnown"
                    style="-fx-font-size: 16px; -fx-background-color: lightgreen;" text="✅ Know"/>
            <Button fx:id="dontKnowButton" onAction="#handleUnknown"
                    style="-fx-font-size: 16px; -fx-background-color: lightcoral;" text="❌ Don't know"/>
        </HBox>
    </VBox>

</StackPane>
